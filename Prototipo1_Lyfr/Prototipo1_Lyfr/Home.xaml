<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Prototipo1_Lyfr.Home" 
             BackgroundColor="{DynamicResource BackgroundColor_App2}" 
             SizeChanged="ContentPage_SizeChanged">
    <ContentView>
        
    <ScrollView>
            <StackLayout Spacing="10" Padding="5">
                <Frame Visual="Material" 
                       HasShadow="True" 
                       BackgroundColor="{DynamicResource BackgroundColor_App}">
                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Horizontal">
                            <Label TextColor="{DynamicResource TextColor_App}"
                                   Text="Recomendados para você" 
                                   HorizontalOptions="FillAndExpand" 
                                   FontSize="Medium"
                                   FontAttributes="Bold"/>
                            <Label Text="MAIS" 
                                   FontSize="Medium"
                                   TextColor="{DynamicResource TextColor_App}" 
                                   FontAttributes="Bold"/>
                        </StackLayout>
                        <CollectionView x:Name="lista"
                                        HeightRequest="200" 
                                        SelectionMode="Single"
                                        SelectionChanged="CollectionView_SelectionChanged" >
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Horizontal" 
                                                 Span="1"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid RowSpacing="0" 
                                          BackgroundColor="Transparent">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="115"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="155" />
                                            <RowDefinition Height="55"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0"
                                               Grid.Row="0"
                                               Source="{Binding Source_imagem}"
                                               WidthRequest="90"
                                               HeightRequest="150"
                                               VerticalOptions="CenterAndExpand"/>
                                        <Label Grid.Column="0"
                                               Grid.Row="1"
                                               Text="{Binding Nome}"
                                               TextColor="{DynamicResource TextColor_App}"
                                               VerticalTextAlignment="Start"
                                               HorizontalTextAlignment="Start"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="FillAndExpand"
                                                WidthRequest="88"
                                                BackgroundColor="Transparent"
                                                FontAttributes="Bold"
                                                FontSize="Small"
                                                MaxLines="2"
                                                LineBreakMode="TailTruncation"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>
                <Frame Visual="Material" 
                       HasShadow="True" 
                       BackgroundColor="{DynamicResource BackgroundColor_App}">
                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Horizontal">
                            <Label TextColor="{DynamicResource TextColor_App}" 
                                   Text="Continue lendo"
                                   HorizontalOptions="FillAndExpand"
                                   FontSize="Medium" 
                                   FontAttributes="Bold"/>
                            <Label Text="MAIS" 
                                   FontSize="Medium"
                                   TextColor="{DynamicResource TextColor_App}" 
                                   FontAttributes="Bold"/>
                        </StackLayout>

                        <CollectionView x:Name="lista2" 
                                        HeightRequest="200" 
                                        SelectionMode="Single" 
                                        SelectionChanged="CollectionView2_SelectionChanged">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Horizontal" Span="1"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid RowSpacing="0" 
                                          BackgroundColor="Transparent">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="115"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="155" />
                                            <RowDefinition Height="55"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" 
                                               Grid.Row="0" 
                                               Source="{Binding Source_imagem}" 
                                               WidthRequest="90" 
                                               HeightRequest="150"
                                               VerticalOptions="CenterAndExpand"/>
                                        <Label Grid.Column="0"
                                                Grid.Row="1"
                                                Text="{Binding Nome}"
                                                TextColor="{DynamicResource TextColor_App}"
                                                VerticalTextAlignment="Start"
                                                HorizontalTextAlignment="Start"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="FillAndExpand"
                                                WidthRequest="88"
                                                BackgroundColor="Transparent"
                                                FontAttributes="Bold"
                                                FontSize="Small"
                                                MaxLines="2"
                                                LineBreakMode="TailTruncation"/>
                                    </Grid>
                                    <!--</Frame>-->
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentView>
</ContentPage>