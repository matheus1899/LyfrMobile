<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Prototipo1_Lyfr.Controls"
             x:Class="Prototipo1_Lyfr.Login">
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style TargetType="Label" x:Key="Lbl_Titulo_Entry">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="TextColor" Value="{DynamicResource TextColor_App}"/>
                <Setter Property="Margin" Value="15,0,0,0"/>
            </Style>
            <Style TargetType="controls:NewFrame" x:Key="Frame_This_Page">
                <Setter Property="Visual" Value="Material"/>
                <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor_BoxView}"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="HeightRequest" Value="18"/>
                <Setter Property="BorderWidth" Value="0.5"/>
                <Setter Property="BorderColor" Value="{DynamicResource TextColor_App}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <StackLayout BackgroundColor="{DynamicResource BackgroundColor_App}"
                     Orientation="Vertical">
            <!--Titulo-->
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Text="Lyfr" 
                       FontAttributes="Bold" 
                       FontSize="60" 
                       HorizontalOptions="FillAndExpand"
                       HorizontalTextAlignment="Center"
                       FontFamily="Arial"
                       HeightRequest="80"
                       StyleClass="class"
                       TextColor="{DynamicResource TextColor_App}"/>
            </StackLayout>
            <!--Email-->
            <StackLayout VerticalOptions="CenterAndExpand">
                <StackLayout Margin="20,15,20,0" VerticalOptions="Center">
                    <Label Text="E-mail" Style="{x:StaticResource Lbl_Titulo_Entry}"/>
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}" >
                        <StackLayout Padding="0,-13,0,-13" Orientation="Horizontal">
                            <Entry x:Name="ent_Email_Usuario"
                                   Keyboard="Email"
                                   TextColor="{DynamicResource TextColor_App}"
                                   TextChanged="EntryEmail_TextChanged"
                                   Focused="EntryEmail_Focused"
                                   Unfocused="EntryEmail_Unfocused"
                                   HorizontalOptions="FillAndExpand"/>
                            <Label Text=" X " 
                                   x:Name="Lbl_X_Email" 
                                   TextColor="Gray"
                                   IsEnabled="False"
                                   IsVisible="False"
                                   HorizontalOptions="End" 
                                   Margin="5,0,5,0"
                                   VerticalTextAlignment="Center"
                                   VerticalOptions="FillAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_Email" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
                <!--Senha-->
                <StackLayout Margin="20,22,20,0" VerticalOptions="Center">
                    <Label Text="Senha" Style="{x:StaticResource Lbl_Titulo_Entry}"/>
                    <controls:NewFrame  Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="7" 
                                     VerticalOptions="FillAndExpand" 
                                     HorizontalOptions="FillAndExpand" 
                                     Margin="0,-13,0,-13">
                            <Entry x:Name="ent_Senha_Usuario"
                                   IsPassword="True" 
                                   HorizontalOptions="FillAndExpand"
                                   TextChanged="EntrySenha_TextChanged"
                                   Focused="EntrySenha_Focused"
                                   Unfocused="EntrySenha_Unfocused"
                                   TextColor="{DynamicResource TextColor_App}"/>
                            <Label Text=" X " 
                                   x:Name="Lbl_X_Senha" 
                                   TextColor="Gray"
                                   IsEnabled="False"
                                   IsVisible="False"
                                   HorizontalOptions="End" 
                                   Margin="5,0,7,0"
                                   VerticalTextAlignment="Center"
                                   VerticalOptions="FillAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_Senha" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <ImageButton Source="eye.png"
                                         WidthRequest="30" 
                                         HeightRequest="25"
                                         Aspect="AspectFit"
                                         BackgroundColor="Transparent"
                                         Clicked="Esconde_Exibe_Senha_Clicked"
                                         HorizontalOptions="End"/>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <!--Esqueci minha senha-->
            <Label Text="Esqueci minha senha" 
                       HorizontalOptions="CenterAndExpand"
                       FontSize="Small"
                       TextDecorations="Underline"
                       IsEnabled="False"
                       TextColor="{DynamicResource TextColor_App}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Esqueceu_Senha_Tapped" 
                                              NumberOfTapsRequired="1"/>
                </Label.GestureRecognizers>
            </Label>
            <!--Lembrar senha?-->
            <StackLayout HorizontalOptions="Center" 
                                    Orientation="Horizontal"
                                    Margin="10">
                <CheckBox Color="{DynamicResource TextColor_App}" />
                <Label Text="Lembrar senha?" 
                               FontSize="16" 
                               VerticalOptions="Center"
                               TextColor="{DynamicResource TextColor_App}"/>
            </StackLayout>
        </StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="0" Spacing="10">
            <StackLayout Orientation="Horizontal">
                <!--Botão de Login-->
                <BoxView HorizontalOptions="FillAndExpand"/>
                <Button Text="Login" 
                        HorizontalOptions="FillAndExpand" 
                        BackgroundColor="{DynamicResource BackgroundColor_Contraste_App}" 
                        TextColor="White" 
                        CornerRadius="5" 
                        Clicked="Logar_Clicked"/>
                <BoxView HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <!--Botão de Login-->
            <Label Text="CADASTRAR" 
                   TextColor="{DynamicResource TextColor_App}" 
                   HorizontalOptions="Center"
                   Style="{DynamicResource Style_Label}" 
                   Margin="0,5,0,5">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ChamarPagCadastrar" 
                                                    NumberOfTapsRequired="1"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
