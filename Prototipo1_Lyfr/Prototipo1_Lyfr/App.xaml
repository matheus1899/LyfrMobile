<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototipo1_Lyfr.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="TextColor_Alert">Red</Color>
            <Color x:Key="Primary_Color">#EEDBAA</Color>
            <Color x:Key="Secondary_Color">#436477</Color>
            <Color x:Key="Tertiary_Color">#FFFFFF</Color>

            <Style x:Key="Style_Label" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="FontFamily" Value="Arial"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>