<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototipo1_Lyfr.Cadastrar"
             xmlns:controls="clr-namespace:Prototipo1_Lyfr.Controls"
             BackgroundColor="{DynamicResource BackgroundColor_App}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="StackLayout" x:Key="Filho_Frame">
                <Setter Property="Padding" Value="7,-10,7,10"/>
            </Style>
            <Style TargetType="Label" x:Key="Lbl_Titulo_Entry">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="Margin" Value="35,0,0,0"/>
                <Setter Property="TextColor" Value="{DynamicResource TextColor_App}"/>
            </Style>
            <Style TargetType="controls:NewFrame" x:Key="Frame_This_Page">
                <Setter Property="CornerRadius" Value="7"/>
                <Setter Property="Visual" Value="Material"/>
                <Setter Property="HeightRequest" Value="18"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Margin" Value="15,0,15,0"/>
                <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor_BoxView}"/>
                <!--<Setter Property="BorderWidth" Value="0.5"/>
                <Setter Property="BorderColor" Value="{DynamicResource TextColor_App}"/>-->
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    
    <ScrollView>
        <StackLayout VerticalOptions="FillAndExpand">
            <!--<StackLayout Orientation="Horizontal" 
                         HorizontalOptions="FillAndExpand" 
                         Margin="70,20,70,0" Spacing="35">
                <controls:NewFrame BackgroundColor="{DynamicResource BackgroundColor_Contraste_App}" CornerRadius="25" WidthRequest="7" HeightRequest="7" BorderColor="#436477">
                    <StackLayout Padding="0,-20,0,-20">
                        <Label Text="1" TextColor="White" 
                               FontAttributes="Bold" 
                               HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                    </StackLayout>
                </controls:NewFrame>
                <StackLayout HeightRequest="1" BackgroundColor="#436477" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
                <controls:NewFrame BackgroundColor="{DynamicResource BackgroundColor_App}" CornerRadius="25" WidthRequest="7" HeightRequest="7" BorderColor="#436477">
                    <StackLayout Padding="0,-20,0,-20">
                        <Label Text="2" TextColor="{DynamicResource TextColor_App}" 
                               FontAttributes="Bold"
                               HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                    </StackLayout>
                </controls:NewFrame>
            </StackLayout>-->
            <Grid VerticalOptions="Center" 
                  x:Name="Grid_"
                  RowSpacing="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.428*"/>
                    <ColumnDefinition Width="1.428*"/>
                    <ColumnDefinition Width="1.428*"/>
                    <ColumnDefinition Width="1.428*"/>
                    <ColumnDefinition Width="1.428*"/>
                    <ColumnDefinition Width="1.428*"/>
                    <ColumnDefinition Width="1.428*"/>
                </Grid.ColumnDefinitions>
                <!-- Row 0 -->
                
                
                <!-- Logo -->
                <!-- Row 1 -->
                <Image Source="Logo_Lyfr.png" 
                       Aspect="AspectFit" 
                       Grid.Row="1" 
                       HeightRequest="110"
                       Grid.Column="2"
                       Grid.ColumnSpan="3"/>
                <!-- Row 2 -->
                <!-- Nome -->
                <!-- Row 3 -->
                <StackLayout Orientation="Vertical" 
                             x:Name="Stack_Ent_Nome" 
                             Grid.Row="3" 
                             Grid.Column="0" 
                             Grid.ColumnSpan="7">
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Style="{x:StaticResource Filho_Frame}" 
                                 Orientation="Horizontal" 
                                 Padding="0,-16,0,-16">
                            <Entry x:Name="ent_Nome_Usuario"
                               TextChanged="EntryNome_TextChanged"
                               HorizontalOptions="FillAndExpand"
                               Focused="EntryNome_Focused"
                               Placeholder="Nome"
                               Unfocused="EntryNome_Unfocused"
                               TextColor="{DynamicResource TextColor_App}" />
                            <Label Text=" X " 
                               x:Name="Lbl_X_Nome" 
                               TextColor="Gray"
                               IsEnabled="False"
                               IsVisible="False"
                               HorizontalOptions="End"
                               Margin="0,0,5,0"
                               VerticalTextAlignment="Center"
                               VerticalOptions="FillAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_Nome" 
                                                      NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
                <!-- Email -->
                <!-- Row 4 -->
                <StackLayout Orientation="Vertical" 
                             Grid.Row="4" 
                             Grid.Column="0" 
                             Grid.ColumnSpan="7"
                         BackgroundColor="Transparent">
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Style="{x:StaticResource Filho_Frame}" 
                                 Orientation="Horizontal" Padding="0,-16,0,-16">
                            <Entry x:Name="ent_Email_Usuario"
                               TextColor="{DynamicResource TextColor_App}" 
                               TextChanged="EntryEmail_TextChanged"
                               HorizontalOptions="FillAndExpand"
                               Focused="EntryEmail_Focused"
                               Placeholder="Email"
                               Unfocused="EntryEmail_Unfocused"
                               Keyboard="Email"/>
                            <Label Text=" X " 
                               x:Name="Lbl_X_Email" 
                               TextColor="Gray"
                               IsEnabled="False"
                               IsVisible="False"
                               HorizontalOptions="End" 
                               Margin="0,0,5,0"
                               VerticalTextAlignment="Center"
                               VerticalOptions="FillAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_Email" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
                <!-- Senha -->
                <!-- Row 5 -->
                <StackLayout Orientation="Vertical" 
                             VerticalOptions="Center" 
                             Grid.Row="5" 
                             Grid.Column="0" 
                             Grid.ColumnSpan="7">
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Style="{x:StaticResource Filho_Frame}" Orientation="Horizontal" Spacing="7">
                            <Entry x:Name="ent_Senha_Usuario" 
                               TextColor="{DynamicResource TextColor_App}" 
                               IsPassword="True"
                               Focused="EntrySenha_Focused"
                               Unfocused="EntrySenha_Unfocused"
                               TextChanged="EntrySenha_TextChanged"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand"
                               Placeholder="Senha"
                               Margin="-5,-5,0,-25"/>
                            <Label Text=" X " 
                               x:Name="Lbl_X_Senha" 
                               TextColor="Gray"
                               IsEnabled="False"
                               IsVisible="False"
                               HorizontalOptions="Center"
                               Margin="5,10,5,-10"
                               VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_Senha" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <ImageButton Source="eye.png"
                                     x:Name="btn_Img_Eye"
                                     WidthRequest="35" 
                                     HeightRequest="30"
                                     Margin="0,-5,-7,-25"
                                     Aspect="AspectFit"
                                     BackgroundColor="Transparent"
                                     Clicked="Esconde_Exibe_Senha_Clicked"
                                     HorizontalOptions="End" VerticalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
                <!-- CPF -->
                <!-- Row 6 -->
                <StackLayout Orientation="Vertical" 
                             VerticalOptions="Center" 
                             x:Name="Stack_Ent_CPF"
                             Grid.Row="6" 
                             Grid.Column="0"
                             IsVisible="False"
                             Grid.ColumnSpan="7">
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Style="{x:StaticResource Filho_Frame}" 
                                 Orientation="Horizontal" 
                                 Spacing="7">
                            <Entry x:Name="ent_CPF_Usuario" 
                               TextColor="{DynamicResource TextColor_App}"
                               Focused="EntryCPF_Focused"
                               Unfocused="EntryCPF_Unfocused"
                               TextChanged="EntryCPF_TextChanged"
                               Placeholder="CPF"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand"
                               MaxLength="11"
                               Keyboard="Numeric"
                               Margin="0,-5,0,-25"/>
                            <Label Text=" X " 
                               x:Name="Lbl_X_CPF" 
                               TextColor="Gray"
                               IsEnabled="False"
                               IsVisible="False"
                               HorizontalOptions="Center"
                               Margin="5,10,5,-10"
                               VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_CPF" 
                                                      NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
                <!-- CEP-->
                <!-- Row 7 -->
                <StackLayout Orientation="Vertical" 
                             VerticalOptions="Center" 
                             x:Name="Stack_Ent_CEP" 
                             Grid.Row="7" 
                             Grid.Column="0" 
                             IsVisible="False"
                             Grid.ColumnSpan="7">
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Style="{x:StaticResource Filho_Frame}" 
                                 Orientation="Horizontal" 
                                 Spacing="7">
                            <Entry x:Name="ent_CEP_Usuario" 
                               TextColor="{DynamicResource TextColor_App}"
                               Focused="EntryCEP_Focused"
                               Unfocused="EntryCEP_Unfocused"
                               TextChanged="EntryCEP_TextChanged"
                               Placeholder="CEP"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand"
                               Keyboard="Numeric"
                               
                               MaxLength="8"
                               Margin="0,-5,0,-25"/>
                            <Label Text=" X " 
                               x:Name="Lbl_X_CEP" 
                               TextColor="Gray"
                               IsEnabled="False"
                               IsVisible="False"
                               HorizontalOptions="Center"
                               Margin="5,10,5,-10"
                               VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_CEP" 
                                                      NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
                <!-- Telefone -->
                <!-- Row 8 -->
                <StackLayout Orientation="Vertical" 
                             VerticalOptions="Center" 
                             x:Name="Stack_Ent_Tele" 
                             Grid.Row="8" 
                             Grid.Column="0" 
                             IsVisible="False"
                             Grid.ColumnSpan="7">
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Style="{x:StaticResource Filho_Frame}" 
                                 Orientation="Horizontal" 
                                 Spacing="7">
                            <Entry x:Name="ent_Telefone_Usuario" 
                               TextColor="{DynamicResource TextColor_App}"
                               Focused="EntryTelefone_Focused"
                               Unfocused="EntryTelefone_Unfocused"
                               TextChanged="EntryTelefone_TextChanged"
                               Placeholder="Telefone"
                               Keyboard="Telephone"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand"
                               Margin="0,-5,0,-25"/>
                            <Label Text=" X " 
                               x:Name="Lbl_X_Telefone" 
                               TextColor="Gray"
                               IsEnabled="False"
                               IsVisible="False"
                               HorizontalOptions="Center"
                               Margin="5,10,5,-10"
                               VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Lbl_Apagar_Entry_Telefone" 
                                                      NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
                <!-- Data Nascimento-->
                <!-- Row 9 -->
                <StackLayout Orientation="Vertical" 
                             VerticalOptions="Center" 
                             x:Name="Stack_Ent_DataNasc" 
                             Grid.Row="9" 
                             Grid.Column="0" 
                             IsVisible="False"                             
                             Grid.ColumnSpan="7">
                    <controls:NewFrame Style="{x:StaticResource Frame_This_Page}">
                        <StackLayout Style="{x:StaticResource Filho_Frame}" 
                                 Orientation="Horizontal" 
                                 Padding="0,-16,0,-16"
                                 Spacing="7">
                            <DatePicker MinimumDate="01/01/1940" 
                                    Visual="Material"
                                    TextColor="{DynamicResource TextColor_App}"
                                    x:Name="DataPicker_Nascimento" 
                                    HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </controls:NewFrame>
                </StackLayout>
            </Grid>

            <Label x:Name="lbl_aviso" 
                   Text="Senha fraca. Minimo de oito caracteres&#10; sendo um caracter especial(...) &#10;e uma letra maiúscula"
                   TextColor="Red"
                   FontSize="Small"
                   HorizontalTextAlignment="Center"
                   Margin="0,15,0,-20"
                   MaxLines="3"/>
            <StackLayout Margin="0,20,0,0"
                         Spacing="15"
                         HorizontalOptions="CenterAndExpand" 
                         VerticalOptions="End">
                <!-- Buttons Plano -->
                <StackLayout Orientation="Horizontal" 
                             Margin="0,15,0,0"
                             Spacing="20"
                             HorizontalOptions="CenterAndExpand">
                    <Button x:Name="btn_gratis" 
                            Text="Grátis &#10; Com anúncios " 
                            Clicked="btn_gratis_Clicked" 
                            Style="{DynamicResource Style_Button_Ativo}" 
                            HorizontalOptions="FillAndExpand"/>
                    <Button x:Name="btn_pago" 
                            Text="R$ 4,99 &#10; Leia à Vontade " 
                            Clicked="btn_pago_Clicked"
                            Style="{DynamicResource Style_Button_Desativo}" 
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                <!-- Button Cadastrar -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="FillAndExpand">
                    <BoxView HorizontalOptions="FillAndExpand" 
                             BackgroundColor="Transparent"/>
                    <Button Text="  Cadastrar  " 
                            x:Name="btn_Cadastrar"
                            HorizontalOptions="FillAndExpand" 
                            BackgroundColor="{DynamicResource BackgroundColor_Contraste_App}" 
                            TextColor="White" 
                            CornerRadius="3" 
                            Margin="0,0,0,20"
                            Clicked="Cadastrar_Clicked"/>
                    <BoxView HorizontalOptions="FillAndExpand" 
                             BackgroundColor="Transparent"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>