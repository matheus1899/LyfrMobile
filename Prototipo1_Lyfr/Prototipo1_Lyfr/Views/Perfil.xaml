<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d"
             BackgroundColor="#436477"
             IconImageSource="perfil_icon.png"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Prototipo1_Lyfr.Views.Perfil">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Variant_Primary_Color">#e3c38b</Color>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource Secondary_Color}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentView>
        <Grid RowSpacing="0" 
              ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.6666*"/>
                <ColumnDefinition Width="1.6666*"/>
                <ColumnDefinition Width="1.6666*"/>
                <ColumnDefinition Width="1.6666*"/>
                <ColumnDefinition Width="1.6666*"/>
                <ColumnDefinition Width="1.6666*"/>
            </Grid.ColumnDefinitions>
            <Label Text="{Binding Nome}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" TextColor="{DynamicResource Tertiary_Color}" 
                   FontSize="Title" FontAttributes="Bold"/>
            <BoxView Grid.Row="1" 
                     Grid.RowSpan="3" 
                     Grid.Column="0" 
                     Grid.ColumnSpan="6" 
                     BackgroundColor="#EEDBAA" 
                     CornerRadius="35,35,0,0"/>
            <TableView HasUnevenRows="True" 
                       Margin="0,20,0,0" 
                       Grid.Row="1"
                       Grid.RowSpan="3"
                       Grid.Column="0" 
                       Grid.ColumnSpan="6">
                <TableRoot>
                    <TableSection>
                        <ViewCell>
                            <StackLayout Margin="30,16,30,16" Orientation="Horizontal">
                                <Label  FontAttributes="Bold" FontSize="Medium" VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="&#xf0e0;">
                                                <Span.FontFamily>
                                                    <OnPlatform x:TypeArguments="x:String" 
                                                                Android="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid"/>
                                                </Span.FontFamily>
                                            </Span>
                                            <Span Text="  Email"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding Email}" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Margin="30,16,30,16" Orientation="Horizontal">
                                <Label  FontAttributes="Bold" FontSize="Medium" VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="&#xf084;">
                                                <Span.FontFamily>
                                                    <OnPlatform x:TypeArguments="x:String" 
                                                                Android="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid"/>
                                                </Span.FontFamily>
                                            </Span>
                                            <Span Text="  Senha"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="************" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Margin="30,16,30,16" Orientation="Horizontal" >
                                <Label  FontAttributes="Bold" FontSize="Medium" VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="&#xf879;">
                                                <Span.FontFamily>
                                                    <OnPlatform x:TypeArguments="x:String" 
                                                                Android="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid"/>
                                                </Span.FontFamily>
                                            </Span>
                                            <Span Text="  Telefone"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding Telefone}"  HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Margin="30,16,30,16" Orientation="Horizontal">
                                <Label  FontAttributes="Bold" FontSize="Medium" VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="&#xf3c5;">
                                                <Span.FontFamily>
                                                    <OnPlatform x:TypeArguments="x:String" 
                                                                Android="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid"/>
                                                </Span.FontFamily>
                                            </Span>
                                            <Span Text="  Endereço"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label HorizontalOptions="EndAndExpand">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Rua}"/>
                                            <Span Text=" n° "/>
                                            <Span Text="{Binding Numero}"/>
                                            <Span Text="&#10;"/>
                                            <Span Text="{Binding Cidade}"/>
                                            <Span Text=" - "/>
                                            <Span Text="{Binding Estado}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Margin="20,30,20,0">
                                <ActivityIndicator Color="{DynamicResource Secondary_Color}" IsVisible="false" x:Name="act_ind_Sugestao" Grid.Row="0" Grid.Column="3"/>
                                <Label Text="Críticas ou sugestões" 
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="FillAndExpand"
                                       TextColor="{DynamicResource Secondary_Color}"
                                       HorizontalTextAlignment="Start" 
                                       VerticalTextAlignment="Center"/> 
                                <Frame Margin="0,15,0,0" 
                                       CornerRadius="4">
                                    <Editor Margin="0,-15,0,-10"
                                            AutoSize="TextChanges"
                                            BackgroundColor="{DynamicResource Tertiary_Color}" 
                                            HorizontalOptions="FillAndExpand"
                                            x:Name="mensagem"/> 
                                </Frame>
                                <StackLayout Orientation="Horizontal">
                                    <Button Text="   Enviar   "
                                            Margin="0,10,0,10"
                                            BackgroundColor="{DynamicResource Secondary_Color}" 
                                            TextColor="{DynamicResource Primary_Color}"
                                            HorizontalOptions="CenterAndExpand"
                                            Clicked="EnviarSugestao_Clicked"/> 
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            
        </Grid>
    </ContentView>
</ContentPage>