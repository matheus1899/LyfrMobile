<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Prototipo1_Lyfr.ViewModels"
             mc:Ignorable="d"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Prototipo1_Lyfr.Views.ListaPesquisa">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="FontAwesome" x:TypeArguments="x:String">
                <On Platform="Android" Value="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid"/>
            </OnPlatform>
            <Color x:Key="Variant_Primary_Color">#313131</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <vm:ListaPesquisaViewModel/>
    </ContentPage.BindingContext>
    
    <pancake:PancakeView BackgroundGradientStartColor="{DynamicResource Primary_Color}"
                         BackgroundGradientEndColor="{DynamicResource Variant_Primary_Color}">
        <StackLayout>
            <StackLayout Orientation="Horizontal"  BackgroundColor="#000000" HeightRequest="55">
                <ImageButton  BackgroundColor="Transparent" Margin="10,13,-10,13" Clicked="btnImageVoltar">
                    <ImageButton.Source>
                        <FontImageSource Glyph="&#xf060;" Color="{DynamicResource Secondary_Color}" Size="100">
                            <FontImageSource.FontFamily>
                                <OnPlatform x:TypeArguments="x:String" 
                                            Android="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid"/>
                            </FontImageSource.FontFamily>
                        </FontImageSource>
                    </ImageButton.Source>
                </ImageButton>
                <SearchBar Placeholder="Pesquisar livros ou autores..."  
                           FontSize="Medium" 
                           x:Name="searchbar"
                           Margin="-15,0,0,5"
                           BackgroundColor="Transparent"
                           Text="{Binding SearchBar_Text}"
                           HorizontalOptions="FillAndExpand" 
                           SearchButtonPressed="SearchBar_Pressed"
                           TextColor="{DynamicResource Secondary_Color}"
                           
                           PlaceholderColor="{DynamicResource Secondary_Color}" 
                           CancelButtonColor="{DynamicResource Secondary_Color}"/>
            </StackLayout>
            <ListView ItemTapped="PesquisaItem_Tapped" 
                      SeparatorColor="{DynamicResource Secondary_Color}" 
                      ItemsSource="{Binding Lista_Pesquisa}"
                      x:Name="lista_Pesquisa" 
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <StackLayout Orientation="Horizontal">
                                    <Image HeightRequest="20" Margin="30,0,0,0" Source="timeleft.png"/>
                                    <Label FontSize="Medium" 
                                           Margin="10,15,0,15" 
                                           TextColor="{DynamicResource Secondary_Color}" 
                                           VerticalTextAlignment="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding ItemPesquisado}" />
                                                <Span Text="&#10;" />
                                                <Span Text="{Binding DataPesquisa}"  TextColor="LightGray" FontSize="Default"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </pancake:PancakeView>

</ContentPage>